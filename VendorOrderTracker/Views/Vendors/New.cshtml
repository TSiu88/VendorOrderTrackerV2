@{
  Layout = "_Layout";
}
<div class="header">
  <h1>New Vendor Information</h1>
</div>
<div class="content">
  <form action="/vendors" method="post">
    <div class="form-group">
      <label for="name">Business Name</label>
      <input id="name" name="name" type="text" required>
    </div>
    <div class="form-group">
      <label for="description">Business Description</label>
      <textarea name="description" id="description" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group">
      <label for="address">Business Address</label>
      <input id="address" name="address" type="text">
    </div>
    <div class="form-group">
      <label for="phone">Phone Number</label>
      <input id="phone" name="phone" type="tel" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
    </div>
    <div class="form-group">
      <label for="email">Email Address</label>
      <input id="email" name="email" type="email">
    </div>
    <button class="btn" type="submit">Add Vendor</button>
  </form>
</div>
<div class="footer">
  <p>[ <a href="/">Return to Home</a> ]
  [ <a href="/vendors">View Vendors</a> ]</p>
</div>