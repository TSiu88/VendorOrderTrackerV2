@{
  Layout = "_Layout";
}
@using VendorOrders.Models
<div class="header">
  <h1>All Vendors</h1>
</div>
<div class="content">
  @if(@Vendor.GetAll().Count == 0)
  {
    <h3 class="empty">No Vendors added!</h3>
  }
  else
  {
    <h3>Vendor Name - Number of Orders</h3>
    <ol>
      @foreach (Vendor vendor in Model)
      {
        <li><a href="/vendors/@vendor.Id">@vendor.Name</a> - @vendor.Orders.Count</li>
      }
    </ol>
  }
</div>
<div class="footer">
  <p>[ <a href="/">Return To Home</a> ]
  [ <a href="/vendors/new">Add new Vendor</a> ]</p>
</div>