@{
  Layout = "_Layout";
}
<div class="header">
  <h1>Add a New Order</h1>
</div>
<div class="content">
  <form action="/vendors/@Model.Id/orders" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <div class="form-group">
      <label for="title">Order Title</label>
      <input id="title" name="title" type="text" required>
    </div>
    <div class="form-group">
      <label for="date">Order Delivery Date</label>
      <input id="date" name="date" type="date" required>
    </div>
    <div class="form-group">
      <label for="description">Order Description</label>
      <textarea name="description" id="description" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group">
      <label for="price">Order Price</label>
      <input id="price" name="price" type="number">
    </div>
    <button class="btn" type="submit">Add Order</button>
  </form>
</div>
<div class="footer">
  <p>[ <a href="/vendors/@Model.Id">Return to Vendor</a> ]
  [ <a href="/">Return To Home</a> ]</p>
</div>